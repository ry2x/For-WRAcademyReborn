{
  "name": "reborn_wr",
  "image": "mcr.microsoft.com/devcontainers/typescript-node",
  "remoteUser": "node",
  "workspaceFolder": "/app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "mounts": ["target=${containerWorkspaceFolder}/node_modules,source=dev-steps-volume"],
  // "runArgs": ["--env-file", ".devcontainer/devcontainer.env"],
  "customizations": {
    "vscode": {
      "settings": {
        // ファイル保存時にフォーマット処理を実行
        "editor.formatOnSave": true,
        // 各ファイルのデフォルトのフォーマッターを指定
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[postcss]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        // ESLintの対象を設定
        "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        // 保存時に実行されるコードアクションを有効に設定
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always",
          "source.organizeImports": "always"
        },
        // VSCodeのデフォルトのフォーマッターを無効に
        "javascript.format.enable": false,
        "typescript.format.enable": false
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "SeyyedKhandon.firacode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "cliffordfajardo.highlight-line-vscode",
        "rsbondi.highlight-words",
        "ms-vscode.vscode-typescript-next",
        "PKief.material-icon-theme",
        "stringham.move-ts",
        "christian-kohler.path-intellisense",
        "pmneo.tsimporter"
      ]
    }
  },
  "postAttachCommand": "git config --global --add safe.directory /app",
  "onCreateCommand": "sudo chown node node_modules && npm install -g pnpm"
}
